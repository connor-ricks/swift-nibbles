# #!/bin/bash

IFS="="
COMMIT_MSG_FILE=$1
declare -a EMOJI_COMMANDS=(
  "initial=ğŸ‰" 
  "tag=ğŸ”–" 
  "feature=âœ¨" 
  "bug=ğŸ›" 
  "refactor=â™»ï¸" 
  "docs=ğŸ“š" 
  "a11y=â™¿" 
  "performance=ğŸ" 
  "styling=ğŸ¨" 
  "tooling=ğŸ§°" 
  "tests=ğŸš¨" 
  "removal=ğŸ—‘ï¸" 
  "wip=ğŸš§"
  "fixup=ğŸ› "
  "dependency=ğŸ“¦"
  "crash=ğŸ’¥"
)

for COMMAND in "${EMOJI_COMMANDS[@]}"; do 
  read -ra ARRAY <<< "${COMMAND}"
  if egrep --quiet ":${ARRAY[0]}:" "$1"; then
    sed -i -n -e "s/:${ARRAY[0]}://g" "$1"
    sed -i -n -e "1s/^/${ARRAY[1]} /" "$1"
  fi
done 
exit 0
